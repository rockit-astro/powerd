"""Commandline client for the dome light"""

import os
import sys
import Pyro4

PYRO_HOST = '192.168.0.102'
PYRO_PORT = 9009
PYRO_NAME = 'onemetre_power_daemon'
PYRO_COMM_TIMEOUT = 5

PYRO_URI = 'PYRO:' + PYRO_NAME + '@' + PYRO_HOST + ':' + str(PYRO_PORT)
SCRIPT_NAME = os.path.basename(sys.argv[0])

if __name__ == '__main__':
    if len(sys.argv) > 1:
        Pyro4.config.COMMTIMEOUT = PYRO_COMM_TIMEOUT
        if sys.argv[1] == 'on' or sys.argv[1] == 'off':
            with Pyro4.Proxy(PYRO_URI) as power:
                if not power.switch('light', sys.argv[1] == 'on'):
                    print('error: failed to switch light {}'.format(sys.argv[1]))
                    sys.exit(-1)
        elif sys.argv[1] == 'status':
            with Pyro4.Proxy(PYRO_URI) as power:
                print('on' if power.value('light') else 'off')
        sys.exit(0)

    print('usage: {} (on|off|status)'.format(SCRIPT_NAME))
    sys.exit(-1)

