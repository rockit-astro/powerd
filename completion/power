_power()
{
    local cur opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    prevprev="${COMP_WORDS[COMP_CWORD-2]}"
    opts="status json switch"

    if [[ ${prev} == "switch" ]] ; then
        opts="rack_nuc monitor telescope_12v telescope_80v telescope_network vaisala webcam microphone roomalert light red_camera blue_camera telescope_nuc red_focus_motor red_focus_controller"
    fi

    if [[ ${prevprev} == "switch" ]] ; then
        opts="on off"
    fi

    COMPREPLY=($(compgen -W "${opts}" -- ${cur}))
    return 0
}

complete -F _power power
